<div class="row justify-content-md-center">
    <div class="col-lg-10 mw-col12">

        <!-- Global Card -->
        <div class="card card-accent-primary">
            <div class="card-header float-left">
                <span style="font-size: large">All Admins (<%= admins.length %>)</span>
                <button class="btn btn-sm btn-success float-right" type="button" onclick="getAdminModal();">
                    <i class="icon-plus"></i> Add
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive text-center">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Identifiers</th>
                                <th>Permissions</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (const admin of admins) { %>
                            <tr>
                                <td><%= admin.name %></td>
                                <td>
                                    <div style="display: flex; flex-direction: column; gap: 2px;">
                                        <% if (admin.identifiers.length > 0) { %>
                                            <% for (const identifier of admin.identifiers) { %>
                                                <span style="font-size: 0.9em; opacity: 75%; font-family: monospace; display: flex; align-items: center; justify-content: center; gap: 4px;">
                                                    <% if (identifier.startsWith('fivem:')) { %>
                                                        <svg style="display: inline; max-width: 1.5em; max-height: 1.5em; margin-top: -2px;">
                                                            <use href="#cfxre-icon"></use>
                                                        </svg>
                                                    <% } else if (identifier.startsWith('discord:')) { %>
                                                        <svg style="display: inline; max-width: 1.5em; max-height: 1.5em;">
                                                            <use href="#discord-icon"></use>
                                                        </svg>
                                                    <% } %>
                                                    <%= identifier %>
                                                </span>
                                            <% } %>
                                        <% } else { %>
                                            <span>--</span>
                                        <% } %>
                                    </div>
                                </td>
                                <td><%= admin.perms %></td>
                                <td class="tableActions">
                                    <% if (admin.isSelf) { %>
                                        <button class="btn btn-sm btn-outline-primary"
                                            onclick="openAccountModal()">
                                            <i class="icon-pencil"></i> Your Account
                                        </button>
                                    <% } else { %>
                                        <% if (admin.disableEdit) { %>
                                            <button class="btn btn-sm btn-outline-secondary" disabled>
                                                <i class="icon-pencil"></i> Edit
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-outline-primary"
                                                onclick="getAdminModal('<%= admin.name %>')">
                                                <i class="icon-pencil"></i> Edit
                                            </button>
                                        <% } %>
                                        &nbsp;
                                        <% if (admin.disableDelete) { %>
                                            <button class="btn btn-sm btn-outline-secondary" disabled>
                                                <i class="icon-trash"></i> Delete
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-outline-danger"
                                                onclick="deleteAdmin('<%= admin.name %>')">
                                                <i class="icon-trash"></i> Delete
                                            </button>
                                        <% } %>
                                    <% } %>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>


